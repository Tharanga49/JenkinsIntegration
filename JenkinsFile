pipeline {
    agent any
    stages {
        stage ('Clone repository') {
            steps { 
                git branch: 'main', url: 'https://github.com/Tharanga49/JenkinsIntegration.git'
            }
        }
        stage ('Build') {
            steps {
               sh 'docker build -t my-app .' 
            }
        }
        stage ('Run docker container') {
            steps {
                sh 'docker run -d -p 8080:80 --name my-container my-app'
            }
        }
    }
}